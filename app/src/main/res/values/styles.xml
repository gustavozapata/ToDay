<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blanco</item>
    </style>

    <style name="heading1">
        <item name="android:textSize">37sp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="fontFamily">@font/montserrat_black</item>
    </style>

    <style name="heading2">
        <item name="android:textSize">31sp</item>
        <item name="android:textColor">@color/amarillo</item>
        <item name="fontFamily">@font/montserrat_black</item>
    </style>

    <style name="element">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="fontFamily">@font/montserrat_black</item>
    </style>

    <style name="information">
        <!--<item name="android:textSize">31sp</item>-->
        <item name="android:textColor">@color/lila</item>
        <item name="fontFamily">@font/montserrat_mediumitalic</item>
    </style>

    <style name="action">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/verdeazul</item>
        <item name="fontFamily">@font/montserrat_black</item>
    </style>

    <style name="footer">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>


    <!--OTHER ACTIVITY-->
    <style name="checkboxes">
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#FFF</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>
