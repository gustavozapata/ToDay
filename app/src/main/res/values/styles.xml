<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blanco</item>
    </style>

    <style name="heading1">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="fontFamily">@font/montserrat_black</item>
    </style>

    <style name="heading2">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/amarillo</item>
        <item name="fontFamily">@font/montserrat_black</item>
    </style>

    <style name="element">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="fontFamily">@font/montserrat_black</item>
    </style>

    <style name="information">
        <item name="android:textColor">@color/lila</item>
        <item name="fontFamily">@font/montserrat_mediumitalic</item>
    </style>

    <style name="action">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/verdeazul</item>
        <item name="fontFamily">@font/montserrat_black</item>
    </style>

    <style name="placeholder">
        <item name="android:textColor">@color/blanco</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="option">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:textColor">@color/lila</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="footer">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>
</resources>
